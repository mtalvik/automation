{
  "tests": [
    {
      "name": "Infrastructure Tests",
      "setup": "apt-get update && apt-get install -y ansible docker.io",
      "run": "ansible-playbook -i inventory playbook.yml --check",
      "input": "",
      "output": "",
      "comparison": "included",
      "timeout": 10,
      "points": 50
    },
    {
      "name": "Docker Tests",
      "setup": "docker --version",
      "run": "docker-compose up -d && sleep 30 && docker-compose ps",
      "input": "",
      "output": "",
      "comparison": "included",
      "timeout": 60,
      "points": 30
    },
    {
      "name": "Documentation Check",
      "setup": "ls -la README.md",
      "run": "wc -l README.md | awk '{print $1}'",
      "input": "",
      "output": "10",
      "comparison": "greater_than",
      "timeout": 5,
      "points": 10
    },
    {
      "name": "Code Quality",
      "setup": "pip install ansible-lint",
      "run": "ansible-lint playbook.yml || true",
      "input": "",
      "output": "",
      "comparison": "included",
      "timeout": 30,
      "points": 10
    }
  ]
}
