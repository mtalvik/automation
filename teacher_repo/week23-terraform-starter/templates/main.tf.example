# Terraform põhiline fail - main.tf
# Kopeerige see fail ja muutke vastavalt oma vajadustele

terraform {
  required_providers {
    # Määrake, milliseid provider'eid kasutate
    local = {
      source  = "hashicorp/local"
      version = "~> 2.0"
    }
    
    # AWS provider (kui kasutate AWS)
    # aws = {
    #   source  = "hashicorp/aws"
    #   version = "~> 5.0"
    # }
  }
}

# Provider konfiguratsioon
# provider "aws" {
#   region = "us-west-2"
# }

# ==========================================
# RESSURSID - mida soovite luua
# ==========================================

# Näide: Lihtne fail
resource "local_file" "example" {
  content  = "See on näide fail."
  filename = "example.txt"
}

# Näide: Kataloog
resource "local_directory" "example" {
  path = "example_dir"
}

# Näide: AWS EC2 server (kui kasutate AWS)
# resource "aws_instance" "web" {
#   ami           = "ami-12345678"
#   instance_type = "t2.micro"
#   
#   tags = {
#     Name = "Web Server"
#   }
# }

# ==========================================
# VÄLJUNDID - mida soovite näha
# ==========================================

# Näide: Faili tee
output "file_path" {
  description = "Loodud faili tee"
  value       = local_file.example.filename
}

# Näide: Kataloogi tee
output "directory_path" {
  description = "Loodud kataloogi tee"
  value       = local_directory.example.path
}
